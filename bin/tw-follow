#!/bin/bash

usage() {
  cat << HELP
SYNOPSIS: tw-follow <screen_name>
SYNOPSIS: tw-follow https://twitter.com/<screen_name>
HELP
}

if [ $# -lt 1 -o "_$1" == "_-h" -o "_$1" == "_-?" ]; then
  usage
  exit 0
fi

NAME=${1##*/}
URL=/1.1/friendships/create.json
twurl -X POST $URL -d "screen_name=$NAME"
