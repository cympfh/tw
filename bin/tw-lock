#!/bin/bash

usage() {
    cat <<EOM
SYNOPSIS
  tw-lock [-u]
    This waits until a mutex lock gotten.
    If -u, release the lock.
EOM
    exit
}

LOCKFILE=/tmp/tw.lock.XXXXX
RELEASE=0
while [ $# -gt 0 ]; do
    case "$1" in
        -u )
            RELEASE=1
            shift
            ;;
        * )
            usage
            ;;
    esac
done

lock() {
    while :; do
        ( umask 0777; : > "$LOCKFILE" ) 2> /dev/null
        if [ $? -eq 0 ]; then
            return
        fi
    done
}

unlock() {
    rm -f "$LOCKFILE"
}

if [ $RELEASE -eq 0 ]; then
    lock
else
    unlock
fi
